{
  "name": "eduhelp-sri-lanka",
  "version": "1.0.0",
  "description": "EduHelp Sri Lanka is a simple, student-friendly educational website designed to help Sri Lankan students easily access school exam papers, textbooks, and learning resources. The site supports both English and Tamil, making it accessible to a wider audience. It is lightweight, fast, and works well on any device, helping students learn and prepare efficiently.",
  "main": "index.html",
  "scripts": {
    "start": "parcel public/index.html",
    "test": "node test-migration.js",
    "test:local": "node test-migration.js http://localhost:8888",
    "test:prod": "node test-migration.js",
    "netlify:dev": "netlify dev",
    "netlify:deploy": "node deploy-netlify.js",
    "netlify:build": "cd netlify/functions && npm install",
    "dev": "netlify dev",
    "deploy:backend": "netlify deploy --prod",
    "deploy:frontend": "firebase deploy --only hosting"
  },
  "dependencies": {
    "@firebasegen/default-connector": "file:dataconnect-generated/js/default-connector",
    "@genkit-ai/googleai": "^1.8.0",
    "@hookform/resolvers": "^4.1.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "firebase": "^11.8.1",
    "genkit": "^1.8.0",
    "gh": "^2.0.9",
    "github": "^14.0.0",
    "googleapis": "^149.0.0",
    "mcp-sdk": "^0.1.0",
    "patch-package": "^8.0.0",
    "recharts": "^2.15.1"
  },
  "devDependencies": {
    "@types/node": "^20",
    "genkit-cli": "^1.8.0",
    "serve": "^14.2.4",
    "netlify-cli": "^17.0.0"
  }
}
